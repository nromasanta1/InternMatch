<div class="container my-4">
  <div class="row">
    <% if current_user.applicant? %>
      <div class="card">
        <div class="card-body">
          <h2>Your application for: <%= @application.internship.role %> at <%= @application.internship.title %></h2>
          <p>Status: <%= @application.status %> </p>
          <p>Sent on: <%= @application.application_date %></p>
          <p>Comment: <%= @application.comment %></p>
          <% if @application.status == "Pending" %>
            <%= link_to "Delete", internship_application_path(@application), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          <% end %>
        </div>
      </div>
    <% elsif current_user.employer? %>
      <div class="d-flex justify-content-between">
        <div>
          <h2><%= @application.internship.role %> at <%= @application.internship.title %></h2>
          <h3><%= @application.status %> </h3>
        </div>
        <div class="pt-3">
          <% if @application.status == "Pending" %>
            <%= link_to "Update", edit_internship_application_path(@application), class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
      <div class="col-8">
        <div class="card h-100">
          <div class="card-body">
            <div class="card-text">Comment:</div>
            <div class="card-text"><%= @application.comment %></div>
          </div>
        </div>
      </div>
      <div class="col-4">
        <div class="card text-white bg-dark">
          <div class="card-header">Name: <%= @application.user.first_name %> <%= @application.user.last_name %></div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Phone: <%= @application.user.contact_number[0..3] %> <%= @application.user.contact_number[4..6] %> <%= @application.user.contact_number[7..9] %></li>
            <li class="list-group-item">Email: <%= @application.user.email %></li>
            <li class="list-group-item">Location: <%= @application.user.location %></li>
            <li class="list-group-item">Sent on: <%= @application.application_date %></li>
          </ul>
        </div>
      </div>
      <% if @application.status == "pending" %>
        <%= link_to "Edit", edit_internship_application_path(@application) %>
      <% end %>
    <% end %>
  </div>
</div>
