

<h1 style="text-align: center;">Internships</h1>

<div style="text-align: center; margin-bottom: 20px;">
  <%= link_to 'New Internship', new_internship_path, class: 'btn', style: 'padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px; text-decoration: none;' %>
</div>

<table style="width: 100%; border-collapse: collapse; margin: 0 auto;">
  <thead style="background-color: #f2f2f2;">
    <tr>
      <th style="padding: 10px; border: 1px solid #ddd;">Title</th>
      <th style="padding: 10px; border: 1px solid #ddd;">Role</th>
      <th style="padding: 10px; border: 1px solid #ddd;">Location</th>
      <th style="padding: 10px; border: 1px solid #ddd;">Start Date</th>
      <th style="padding: 10px; border: 1px solid #ddd;">End Date</th>
      <th style="padding: 10px; border: 1px solid #ddd;">Compensation</th>
      <th style="padding: 10px; border: 1px solid #ddd;">Description</th>
      <th style="padding: 10px; border: 1px solid #ddd;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @internships.each do |internship| %>
      <tr>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= internship.title %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= internship.role %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= internship.location %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= internship.start_date %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= internship.end_date %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= internship.compensation %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= internship.description %></td>
        <td style="padding: 10px; border: 1px solid #ddd;">
          <%= link_to 'Show', internship_path(internship), style: 'margin-right: 5px; color: #007bff; text-decoration: none;' %> |
          <%= link_to 'Edit', edit_internship_path(internship), style: 'margin-right: 5px; color: #28a745; text-decoration: none;' %> |
          <%= link_to 'Destroy', internship_path(internship), method: :delete, data: { confirm: 'Are you sure?' }, style: 'color: #dc3545; text-decoration: none;' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
