<div class="container">

  <section class="mt-4 text-center">
    <h1 style="font-weight: bold; color: #FBC108; padding: 0.5rem 1rem;">Find Your Next Internship</h1>
    <p style="font-size: 1.2rem; color: #E91348;">Connecting Ambition with Opportunity.</p>
  </section>


  <section class="featured-internships py-5">
    <h2 class="mt-4 mb-5 text-center text-gray fs-3 rounded-2">
      Featured Internships
    </h2>

    <div class="container">
      <div class="row justify-content-center g-4">
        <% @internships.each do |internship| %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">

            <div class="card shadow-sm border-0 internship-card" style="border-radius: 15px;">

              <% images = ['back.jpg', 'front.jpg', 'full.png', 'corporate.png', 'digital.png', 'financial.jpg', 'stock.jpg', 'tech.jpg', 'work.jpg', 'workplace.jpg'] %>
              <% random_image = images.sample %>
              <img src="<%= asset_path(random_image) %>" class="img-fluid" alt="Internship image" style="border-radius: 15px 15px 0 0; height: 150px; object-fit: cover;">

              <div class="card-body d-flex flex-column">
                <h5 class="card-title text-dark"><%= internship.title %></h5>
                <p class="card-text text-secondary">Role: <%= internship.role %></p>
                <div class="mt-auto">
                  <%= link_to "More info", internship_path(internship), class: "btn btn-primary w-100", style: "background-color: #FBC108; border: none; border-radius: 8px;" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
